<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.Login"
        android:background="#2E2E2E">

    <EditText
            android:id="@+id/idEmail"
            android:layout_width="231dp"
            android:layout_height="49dp"
            android:background="@drawable/borde_email"
            android:drawablePadding="13sp"
            android:ems="10"
            android:hint="E-mail:"
            android:inputType="textPersonName"
            android:textColor="@android:color/holo_orange_dark"
            android:textColorHint="@android:color/holo_orange_dark"
            android:paddingLeft="10dp"
            android:textColorLink="@android:color/holo_orange_dark"
            android:textSize="19sp"
            tools:textColorHint="@android:color/background_light" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:id="@+id/idSenha"
            android:layout_width="231dp"
            android:layout_height="49dp"
            android:drawablePadding="13sp"
            android:ems="10"
            android:hint="*******"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColorHint="@android:color/holo_orange_dark"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="19sp"
            android:background="@drawable/borde_email"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginBottom="45dp" app:layout_constraintBottom_toTopOf="@+id/btnLogin"/>
    <Button
            android:id="@+id/btnLogin"
            android:layout_width="156dp"
            android:layout_height="53dp"
            android:text="Login"
            android:background="@drawable/border"
            android:textColor="#2E2E2E"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idSenha" android:layout_marginBottom="130dp"
            app:layout_constraintHorizontal_bias="0.498"/>

    <ImageView
            android:layout_width="324dp"
            android:layout_height="138dp" app:srcCompat="@drawable/logo_branco"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="57dp"
            android:layout_marginBottom="219dp" app:layout_constraintBottom_toTopOf="@+id/idSenha"/>

</android.support.constraint.ConstraintLayout>